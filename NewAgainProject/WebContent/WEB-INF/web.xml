<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>NewAgainProject</display-name>
  <welcome-file-list>
    <welcome-file>ProductView.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>JNDI reference to a data source</description>
    <res-ref-name>JDBC/sito.sql</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <servlet>
    <servlet-name>ProductControl</servlet-name>
    <servlet-class>it.unisa.control.ProductControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductControl</servlet-name>
    <url-pattern>/product</url-pattern>
  </servlet-mapping>
  
     <servlet>
    <servlet-name>RegistrationControl</servlet-name>
    <servlet-class>it.unisa.control.RegistrationControl</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegistrationControl</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  
	<servlet>
	  <servlet-name>ModificaControl</servlet-name>
	  <servlet-class>it.unisa.control.ModificaControl</servlet-class>
	</servlet>
	
	 <servlet-mapping>
	  <servlet-name>ModificaControl</servlet-name>
	  <url-pattern>/modifica</url-pattern>
	</servlet-mapping>

</web-app>